<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end"> Hola {{usuario}}! 
            <a class="btn btn-danger" href="/admin/login">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    {{!-- fin fila 1--}}
    
    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo
            </a>
        </div>
    </div>
    {{!-- fin fila 2 --}}
    
    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Subtitulo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                        <tr>
                            <th scope="row">{{id-post}}</th>
                            <td>{{titulo}}</td>
                            <td>{{subtitulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a href="/admin/novedades/editar/{{id-post}}" title="Editar" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="/admin/novedades/eliminar/{{id-post}}" title="Eliminar" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3--}}
</div>