<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" name="titulo" class="form-control" placeholder="titulo"></input>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="subtitulo" class="form-control" placeholder="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="cuerpo" class="form-control" placeholder="cuerpo"></textarea>
                </div>
                <div class="mb-3 row">
                    <label><input type="file" name="imagen" id="imagen" /></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
        {{#if error}}
            <h5>{{message}}</h5>
        {{/if}}
    </div>
</div>